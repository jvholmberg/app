<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/components/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css">
  <script src="/components/jquery/dist/jquery.min.js"></script>
  <script src="/components/bootstrap/dist/js/bootstrap.min.js"></script>
  {% if ENV_DEVELOPMENT %}
    <script src="http://localhost:35729/livereload.js"></script>
  {% endif %}
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">
        app
        {# <img alt="Brand" src="..."> #}
      </a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav">
      {% if user.username === "johan.holmberg123@hotmail.com" %}

        <li class="{{ 'active' if url === 'home' }}"><a href="/home">Home</a></li>
        <li class="{{ 'active' if url === 'profile' }}"><a href="/profile">Profile</a></li>
        <li class="{{ 'active' if url === 'dashboard' }}"><a href="/dashboard">Dashboard</a></li>
      {% elif user %}
        <li><a href="/home">Home</a></li>
        <li><a href="/profile">Profile</a></li>
      {% else %}
        <li class="{{ 'active' if url === 'login' }}"><a href="/login">Login</a></li>
        <li class="{{ 'active' if url === 'register' }}"><a href="/register">Register</a></li>
      {% endif %}
      </ul>

      {% if user %}
      <form class="navbar-form navbar-right" action="/logout" method="post">
        <button class="btn btn-danger" type="submit">Logout</button>
      </form>
      {% endif %}
    </div>
  </div>
  </nav>
  {% block content %}{% endblock %}
</body>
</html>
